---
import Navbar from "../components/site/Navbar.astro";
import Layout from "../layouts/Layout.astro";
import ComponentsList from "../components/site/ComponentsList.astro";
import Title from "../components/site/Title.astro";
import Footer from "../components/site/Footer.astro"
---

<Layout title="Welcome to Marca elements.">
  <Navbar>
    <main>
      <div class="md:flex lg:flex h-screen">
        <div
          class="flex flex-col items-center justify-center md:w-1/2 lg:w-1/2 gap-5 md:m-12 lg:m-12"
        >
          <h1 class="text-8xl font-bold text-gray-200">Marca</h1>
          <p class="text-3xl text-white text-center">
            <span class="text-blue-500">TailwindCSS</span> components
          </p>
          <div class="m-8">
            <a
              href="/getting-started/introduction"
              class="bg-stone-600 rounded-lg py-2 px-8 flex gap-x-2 border-2 border-transparent text-2xl hover:border-stone-300"
            >
              Get started</a
            >
          </div>
        </div>

        <div class="md:w-1/2 lg:w-1/2">
          <img src="/banner-img.webp" alt="banner" />
        </div>
      </div>

      <div class="text-center">
        <Title title="Components" />
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 m-5">
          <ComponentsList />
        </div>
      </div>
    </main>
  </Navbar>
  <Footer/>
</Layout>
